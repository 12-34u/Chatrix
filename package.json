{
  "name": "lan-chat-app",
  "version": "1.0.0",
  "description": "A LAN-based chat application with file sharing capabilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "lan",
    "chat",
    "electron",
    "file-sharing",
    "peer-to-peer"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^1.5.0"
  },
  "build": {
    "appId": "com.yourcompany.lanchat",
    "productName": "LAN Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "css/**/*",
      "js/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Network"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/12-34u/Chatrix.git"
  },
  "bugs": {
    "url": "https://github.com/12-34u/Chatrix/issues"
  },
  "homepage": "https://github.com/12-34u/Chatrix#readme"
}
